
      

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin" }) do |f| %>
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
    <%= image_tag("logo_128.png", :class => "mb-4") %>
    <h1 class="h3 mb-3 font-weight-normal">Iniciar Sesión</h1>
    <%= f.label :email, :class => "sr-only"  %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :type => "email", :placeholder => "Correo Electrónico" %>
    <%= f.label :password, :class => "sr-only"  %>
    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :type => "password", :placeholder => "Coontraseña" %>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block"  %>
    <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
      <%= render "devise/shared/links" %>
  </div>
<% end %>

