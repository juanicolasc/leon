
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<h2>Forgot your password?</h2>
    <% unless devise_error_messages!.to_s.blank? %>
    <div class="alert alert-danger">
          <%= devise_error_messages! -%>
    </div>
    <% end %>
    <%= f.label :email, :class => "sr-only"  %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :type => "email", :placeholder => "Correo ElectrÃ³nico" %>

  <div class="actions">
    <%= f.submit "Enviarme instrucciones", :class => "btn btn-lg btn-primary btn-block"  %>
    <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

