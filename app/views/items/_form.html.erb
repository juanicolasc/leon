<%= form_for @item, :html => {:multipart => true} do  |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <%= form.label "Código", :for => :item_code, class: 'col-sm-2 col-form-label text-sm-right' %>
    <div class="col-sm-10"><%= form.text_field :code, id: :item_code, class: 'form-control' %></div>
  </div>

  <div class="form-group row">
    <%= form.label "Marca", :for => :item_brand, class: 'col-sm-2 col-form-label text-sm-right' %>
    <div class="col-sm-10"><%= form.text_field :brand, id: :item_brand,  class: 'form-control' %></div>
  </div>

  <div class="form-group row">
    <%= form.label "Nombre", :for => :item_name, class: 'col-sm-2 col-form-label text-sm-right' %>
    <div class="col-sm-10"><%= form.text_field :name, id: :item_name, class: 'form-control' %></div>
  </div>

  <div class="form-group row">
    <%= form.label "Proveedor", :for => :item_supplier, class: 'col-sm-2 col-form-label text-sm-right' %>
    <div class="col-sm-10"><%= form.text_field :supplier, id: :item_supplier, class: 'form-control' %></div>
  </div>

  <div class="form-group row">
    <%= form.label "Costo", :for => :item_cost, class: 'col-sm-2 col-form-label text-sm-right' %>
    <div class="col-sm-10"><%= form.number_field :cost, id: :item_cost, class: 'form-control' %></div>
  </div>

  <div class="form-group row">
    <%= form.label "Precio", :for => :item_price, class: 'col-sm-2 col-form-label text-sm-right' %>
    <div class="col-sm-10"><%= form.number_field :price, id: :item_price, class: 'form-control' %></div>
  </div>

  <div class="form-group row">
    <%= form.label "Cantidad", :for => :item_stock, class: 'col-sm-2 col-form-label text-sm-right' %>
    <div class="col-sm-10"><%= form.number_field :stock, id: :item_stock, class: 'form-control' %></div>
  </div>
  <div class="form-group row">
    <%= form.label :image, :for => :item_image, class: 'col-sm-2 col-form-label text-sm-right' %>
    <div class="col-sm-10"><%= form.file_field :image, id: :item_image,  class: 'form-control' %></div>
  </div>

  <div class="form-group row">
    <%= form.label "Descripción", :for => :item_description, class: 'col-sm-2 col-form-label text-sm-right' %>
    <div class="col-sm-10"><%= form.text_area :description, id: :item_description %></div>
  </div>

  <div class="actions">
    <%= button_tag(type: 'submit', class: "btn btn-success") do %>
     <%= fa_icon('floppy-o', text: 'Guardar',  class: "icon-white")%>
    <% end %>
  </div>
<% end %>
