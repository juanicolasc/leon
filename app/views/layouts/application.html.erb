<!DOCTYPE html>
<html>
  <head>
    <title>Leon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
      <a class="navbar-brand" ><%= image_tag("logo.jpeg", :class => "d-inline-block align-top", :alt => "") %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item ">
              <%= link_to fa_stacked_icon('list-ol', base: "square-o", text: 'Inventario'), items_path, :class => 'nav-link'  %>
          </li>
          <li class="nav-item">
              <%= link_to fa_stacked_icon('', base: "money", text: 'Ventas'), sales_path, :class => 'nav-link'  %>
          </li>
          <li class="nav-item">
              <%= link_to fa_stacked_icon("usd", base: "file-o", text: 'Reporte'), charges_path, :class => 'nav-link'  %>
          </li>
        </ul>
        <p class="navbar-text pull-right">
        <% if user_signed_in? %><strong><%= current_user.email %></strong>.
          <%= link_to 'ContraseÃ±a', edit_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Salir", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
          <%= link_to "Registrese", new_user_registration_path, :class => 'navbar-link'  %> |
          <%= link_to "Iniciar", new_user_session_path, :class => 'navbar-link'  %>
        <% end %>
        </p>
      </div>
    </nav>
    <main role="main" class="container">
        <% if notice %>
          <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-warning"><%= alert %></p>
        <% end %>      
        <%= yield %>       
    </main><!-- /.container -->
  </body>
</html>
